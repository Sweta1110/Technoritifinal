<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Brain-den"
            android:textColor="#FFFFFF"
            android:textSize="30dp"

            android:background="@color/colorPrimary"/>
        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="80dp"
            android:addStatesFromChildren="true"
            android:background="@drawable/background_img"
            android:elevation="5dp">

            <RelativeLayout
                android:id="@+id/relativeLayout_ex1"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:clickable="true">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/background_img"
                    android:scaleType="fitXY"
                    android:src="@drawable/scrabble" />


                <TextView
                    android:id="@+id/view_exhibition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="99dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/back"
                    android:gravity="left"
                    android:padding="8dp"
                    android:text="@string/click_to_view"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />


            </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:nestedScrollingEnabled="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/text_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:text="@string/desc"
                        android:textStyle="bold"
                        android:layout_gravity="left"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/text_description"
                        android:padding="8dp"
                        android:layout_below="@+id/text_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/textcolordescription"
                        android:text="Words define life, and give meaning to our feelings. Correctness of words is a necessity for this. We present SCRABBLE, where you have to jumble words to form correct words. Have a good vocabulary ?? Then this is your event. Come and SCRABBLE. The more you are correct, the better chance to win."/>
                    <TextView
                        android:id="@+id/text_sche"
                        android:layout_width="match_parent"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginTop="16dp"
                        android:layout_below="@+id/text_description"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_gravity="start"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/schedule"/>

                    <TextView
                        android:id="@+id/text_schedule"
                        android:padding="8dp"
                        android:layout_below="@+id/text_sche"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/textcolordescription"
                        android:text="@string/still_to_be_updated"/>






                    <TextView
                        android:id="@+id/btn_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="24sp"
                        android:layout_below="@+id/text_schedule"
                        android:text="@string/btnback"
                        android:padding="8dp" />


                </RelativeLayout>

            </ScrollView>

        </ViewFlipper>
        <ViewFlipper
            android:id="@+id/viewFlipper1"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_below="@+id/viewFlipper"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:addStatesFromChildren="true"
            android:background="@drawable/background_img"
            android:elevation="5dp">

            <RelativeLayout
                android:id="@+id/relativeLayout_ex2"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:clickable="true">

                <ImageView
                    android:id="@+id/imageView_ex1"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/background_img"
                    android:scaleType="fitXY"
                    android:src="@drawable/rapid" />


                <TextView
                    android:id="@+id/view_exhibition1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="74dp"
                    android:layout_marginStart="19dp"
                    android:background="@drawable/back"
                    android:gravity="left"
                    android:padding="8dp"
                    android:text="@string/click_to_view"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />


            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:nestedScrollingEnabled="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/text_des1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_gravity="right"
                        android:text="@string/desc"/>

                    <TextView
                        android:id="@+id/text_description1"
                        android:padding="8dp"
                        android:layout_below="@+id/text_des1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/textcolordescription"
                        android:text="Mathematics, the soul of modern science is a necessity. And India has produced some of the best mathematicians, one gave zero and other knew infinity. Presenting you RAPID MATHS, where you have to solve given maths problems in record time to win.Speed and accuracy are the needs."/>
                    <TextView
                        android:id="@+id/text_sche1"
                        android:layout_width="match_parent"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:layout_marginTop="16dp"
                        android:layout_below="@+id/text_description1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_gravity="right"
                        android:text="@string/schedule"/>

                    <TextView
                        android:id="@+id/text_schedule1"
                        android:padding="8dp"
                        android:layout_below="@+id/text_sche1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/textcolordescription"
                        android:text="@string/still_to_be_updated"/>


                    <TextView
                        android:id="@+id/btn_back1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="24sp"
                        android:layout_below="@+id/text_schedule1"
                        android:text="@string/btnback"
                        android:padding="8dp" />


                </RelativeLayout>

            </ScrollView>
        </ViewFlipper>
    </RelativeLayout>
</ScrollView>