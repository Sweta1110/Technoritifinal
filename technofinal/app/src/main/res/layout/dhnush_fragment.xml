<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/umangimage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/dhnushh"
                android:scaleType="fitXY"
                />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:layout_below="@+id/umangimage"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/umangdesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textSize="18sp"
                        android:textColor="@color/textcolordescription"
                        android:text="Arjun, with his 'Gandiv' bow could make his arrows follow desired path.On this concept, using your science and technology , Make a Line following bot which can detect wall and black line to reach target. This event will be entirely based upon,Programming or autonomy. This is a perfect chance for you to show your programming skills. The path or arena will be shown few hours before the Competition. You will be given time to code. No manual control is allowed in this event."/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/umangdesc"
                        android:textSize="20sp"
                        android:padding="3dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="8dp"
                        android:text="Schedule:-"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/umangdesc"
                        android:textSize="20sp"
                        android:padding="3dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/textcolordescription"
                        android:text="@string/still_to_be_updated"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="16dp"
                        android:textStyle="normal"
                        android:text="GEt Rules"
                        android:background="#cc006064"
                        android:textColor="@color/butoontextcolor"/>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>