<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:elevation="5dp"
            android:background="@color/colorPrimary"
            android:text="Fundoz"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            />
        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="80dp"
            android:addStatesFromChildren="true"
            android:background="@drawable/background_img"
            android:elevation="5dp">

            <RelativeLayout
                android:id="@+id/relativeLayout_ex1"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:clickable="true">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/background_img"
                    android:scaleType="fitXY"
                    android:src="@drawable/treasurehunt" />


                <TextView
                    android:id="@+id/view_exhibition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="74dp"
                    android:layout_marginStart="19dp"
                    android:background="@drawable/back"
                    android:gravity="left"
                    android:padding="8dp"
                    android:text="@string/click_to_view"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />


            </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:nestedScrollingEnabled="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/text_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:text="@string/desc"
                        android:textStyle="bold"
                        android:layout_gravity="left"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/text_description"
                        android:padding="8dp"
                        android:layout_below="@+id/text_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/textcolordescription"
                        android:text="How well do you know our campus, BCE Bhagalpur ? Can you guess its parts from clues given ?? Are willing to do any dare??We present you, TREASURE HUNT, where each team will have to do a specific dare at a specific place who's clue is given. Complete the tasks in record time with your team to win."/>
                    <TextView
                        android:id="@+id/text_sche"
                        android:layout_width="match_parent"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginTop="16dp"
                        android:layout_below="@+id/text_description"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_gravity="start"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/schedule"/>

                    <TextView
                        android:id="@+id/text_schedule"
                        android:padding="8dp"
                        android:layout_below="@+id/text_sche"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/textcolordescription"
                        android:text="@string/still_to_be_updated"/>





                    <TextView
                        android:id="@+id/btn_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:layout_below="@+id/text_schedule"
                        android:textColor="@android:color/black"
                        android:textSize="24sp"
                        android:text="@string/btnback"
                        android:padding="8dp" />


                </RelativeLayout>

            </ScrollView>

        </ViewFlipper>
        <ViewFlipper
            android:id="@+id/viewFlipper1"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_below="@+id/viewFlipper"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:addStatesFromChildren="true"
            android:background="@drawable/background_img"
            android:elevation="5dp">

            <RelativeLayout
                android:id="@+id/relativeLayout_ex3"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:clickable="true">

                <ImageView
                    android:id="@+id/imageView_ex1"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/background_img"
                    android:scaleType="fitXY"
                    android:src="@drawable/wild" />



                <TextView
                    android:id="@+id/view_exhibition1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="74dp"
                    android:layout_marginStart="19dp"
                    android:background="@drawable/back"
                    android:gravity="left"
                    android:padding="8dp"
                    android:text="@string/click_to_view"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />


            </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:nestedScrollingEnabled="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/text_des1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_gravity="right"
                        android:text="@string/desc"/>

                    <TextView
                        android:id="@+id/text_description1"
                        android:padding="8dp"
                        android:layout_below="@+id/text_des1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/textcolordescription"
                        android:text="If you can dare then be a part of wild warrior. In this game players have to perform a given task in minimum time. It is a Roadies like game.So come and participate in this dareful event or to just cheer up the players."/>
                    <TextView
                        android:id="@+id/text_sche1"
                        android:layout_width="match_parent"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:layout_marginTop="16dp"
                        android:layout_below="@+id/text_description1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_gravity="right"
                        android:text="@string/schedule"/>

                    <TextView
                        android:id="@+id/text_schedule1"
                        android:padding="8dp"
                        android:layout_below="@+id/text_sche1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/textcolordescription"
                        android:text="@string/still_to_be_updated"/>







                    <TextView
                        android:id="@+id/btn_back1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:layout_below="@+id/text_schedule1"
                        android:textColor="@android:color/black"
                        android:textSize="24sp"
                        android:text="@string/btnback"
                        android:padding="8dp" />


                </RelativeLayout>

            </ScrollView>
        </ViewFlipper>
        <ViewFlipper
            android:id="@+id/viewFlipper2"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/viewFlipper1"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:addStatesFromChildren="true"
            android:background="@drawable/background_img"
            android:elevation="5dp">

            <RelativeLayout
                android:id="@+id/relativeLayout_ex5"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:clickable="true">

                <ImageView
                    android:id="@+id/imageView_ex2"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/background_img"
                    android:scaleType="fitXY"
                    android:src="@drawable/filmfunia" />
                <TextView
                    android:id="@+id/view_exhibition2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="74dp"
                    android:layout_marginStart="19dp"
                    android:background="@drawable/back"
                    android:gravity="left"
                    android:padding="8dp"
                    android:text="@string/click_to_view"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />


            </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:nestedScrollingEnabled="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/text_des2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_gravity="right"
                        android:text="@string/desc"/>

                    <TextView
                        android:id="@+id/text_description2"
                        android:padding="8dp"
                        android:layout_below="@+id/text_des2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/textcolordescription"
                        android:text="Films, are reflection of our life, fantasies and feelings. And bollywood is the largest producer of films. So, are you a film-maniac ? Presenting you FILM FUNIA in which short portion of dialogues, song, film scene etc. will be play to identify about them.Participants should have ability to perform some given task related to his/her questions like mimicry, dance, song etc.Give your knowledge of movies a reality check. Come and participate and have fun."/>
                    <TextView
                        android:id="@+id/text_sche2"
                        android:layout_width="match_parent"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:layout_marginTop="16dp"
                        android:layout_below="@+id/text_description2"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_gravity="right"
                        android:text="@string/schedule"/>

                    <TextView
                        android:id="@+id/text_schedule2"
                        android:padding="8dp"
                        android:layout_below="@+id/text_sche2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/textcolordescription"
                        android:text="@string/still_to_be_updated"/>





                    <TextView
                        android:id="@+id/btn_back2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:layout_below="@id/text_schedule2"
                        android:textSize="24sp"

                        android:text="@string/btnback"
                        android:padding="8dp" />


                </RelativeLayout>

            </ScrollView>
        </ViewFlipper>
    </RelativeLayout>
</ScrollView>